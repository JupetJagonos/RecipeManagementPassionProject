@model RecipeManagementSystem.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h1 class="mt-4">Delete Category</h1>

<h3>Are you sure you want to delete this category?</h3>

<div class="card mb-4">
    <div class="card-header">
        <h4 class="card-title">Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Created By</dt>
            <dd class="col-sm-10">@Model.CreatedBy</dd>

            <dt class="col-sm-2">Created At</dt>
            <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>

            <dt class="col-sm-2">Updated By</dt>
            <dd class="col-sm-10">@Model.UpdatedBy</dd>

            <dt class="col-sm-2">Updated At</dt>
            <dd class="col-sm-10">@Model.UpdatedAt?.ToString("g")</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="CategoryId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

<h2 class="mt-4">Recipes</h2>

@if (Model.Recipes != null && Model.Recipes.Any())
{
    <table class="table table-striped mt-2">
        <thead class="table-dark">
            <tr>
                <th>Recipe Name</th>
                <th>Created By</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model.Recipes)
            {
                <tr>
                    <td>@recipe.Name</td>
                    <td>@recipe.CreatedBy</td>
                    <td>@recipe.CreatedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No recipes available in this category.</p>
}
