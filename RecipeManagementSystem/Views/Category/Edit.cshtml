@model RecipeManagementSystem.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<h1 class="mt-4">Edit Category</h1>

<div class="card mb-4">
    <div class="card-header">
        <h4 class="card-title">Details</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="CategoryId" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </form>
    </div>
</div>

<h2 class="mt-4">Recipes</h2>

@if (Model.Recipes != null && Model.Recipes.Any())
{
    <table class="table table-striped mt-2">
        <thead class="table-dark">
            <tr>
                <th>Recipe Name</th>
                <th>Created By</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model.Recipes)
            {
                <tr>
                    <td>@recipe.Name</td>
                    <td>@recipe.CreatedBy</td>
                    <td>@recipe.CreatedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No recipes available in this category.</p>
}
