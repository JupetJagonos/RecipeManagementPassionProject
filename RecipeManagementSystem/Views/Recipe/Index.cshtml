@model IEnumerable<RecipeManagementSystem.Models.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

<h1 class="mt-4">Recipes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">New</a>
</p>


<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Created By</th>
            <th>Created At</th>
            <th>Updated By</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category?.Name</td>
                <td>@item.CreatedBy</td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>@item.UpdatedBy</td>
                <td>@item.UpdatedAt?.ToString("g")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RecipeId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.RecipeId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
