@model RecipeManagementSystem.Models.Ingredient

@{
    ViewData["Title"] = "Delete Ingredient";
}

<h1 class="mt-4">Delete Ingredient</h1>

<h3>Are you sure you want to delete this ingredient?</h3>

<div class="card mb-4">
    <div class="card-header">
        <h4 class="card-title">Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Created By</dt>
            <dd class="col-sm-10">@Model.CreatedBy</dd>

            <dt class="col-sm-2">Created At</dt>
            <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>

            <dt class="col-sm-2">Updated By</dt>
            <dd class="col-sm-10">@Model.UpdatedBy</dd>

            <dt class="col-sm-2">Updated At</dt>
            <dd class="col-sm-10">@Model.UpdatedAt?.ToString("g")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="IngredientId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
